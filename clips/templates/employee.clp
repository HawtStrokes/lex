(deftemplate employee
   (slot employee-id)
   (slot name)
   (slot position)
   (slot salary)
   (slot employment-type) ;; Full-time, Part-time, Contractor
   (slot contract-type) ;; Permanent, Temporary, Probationary
   (slot date-hired)
   (slot benefits) ;; SSS, PhilHealth, Pag-IBIG, etc.
   (slot leave-balance))

